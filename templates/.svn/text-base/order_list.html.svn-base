{if $full_page}
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
<title>用户订单列表</title>
<link href="styles/Layer.css" rel="stylesheet" type="text/css" />
<link href="styles/Render.css" rel="stylesheet" type="text/css" />
{insert_scripts files="common.js,transport.js,utils.js,listtable.js,datepicker/WdatePicker.js"}
</head>
<body>
<div class="page">
<fieldset>
<legend>订单列表</legend>
</fieldset>
</div>
<hr />
<div id="listDiv" style="overflow:scroll;float:left;">
{/if}
<table border="0" cellpadding="0" cellspacing="1" width="150%">
    <tr class="bglimeimg">
    	<td width=40>详情</td>
		<td width=60>订单号</td>
		<td width=60>订单状态</td>
		<td width=40>配送单状态</td>
		<td width=40>生产单状态</td>
        <td width="130">送货时间</td>
		<td width="130">下单时间</td>
		<td width="60">订货人</td>
		<td width="100">电话</td>
		<td width="80">手机号</td>
		<td>配送站</td>
        <td>送货员</td>
		<td width="180">蛋糕</td>
		<td>生日牌</td>
		<td width=40>送货人</td>
		<td width=70>外送电</td>
		<td width=40>应收</td>
		<td width=40>坐席</td>
		<td width="30">详情</td>
		<td width=40>送货人</td>
		<td width=70>外送电</td>
		<td width=40>应收</td>
		<td width=40>坐席</td>
		<td width="30">详情</td>
    	</tr>
    {if $order}
      {foreach from=$order item=order}
      <tr align="center">
        <td><a href='order.php?act=show&order_id={$order.order_id}' target="_blank">详情</a></td>
        <td>{$order.order_sn}</td>
        <td>{if $order.order_status eq 0}未确认{elseif $order.order_status eq 1}已确认{elseif $order.order_status eq 2}取消{elseif $order.order_status eq 3}无效{elseif $order.order_status eq 4}退订{/if}</td>
        <td>&nbsp;</td>
        <td>&nbsp;</td>
        <td>{$order.best_time}</td>
		<td>{$order.addtime}</td>
        <td>{$order.orderman}</td>
        <td>{$order.ordertel}</td>
        <td>{$order.ordermobile}</td>
        <td>{$order.s_name}</td>
        <td>&nbsp;</td>
        <td align="left">{$order.goods}</td>
        <td>{$order.card_name}</td>
        <td><a href='order.php?act=detail&order_id={$order.order_id}' target="_blank">详情</a></td>
      </tr>
      {/foreach}
      <td colspan="15" align="center">{include file="page.htm"}</td>
      {else}
      <tr ><td align="center" colspan="15">无满足的记录</td></tr>
      {/if}
    </tbody>
</table>
{if $full_page}
</div>
</body>
<script language="javascript">
listTable.recordCount = {$record_count};
listTable.pageCount = {$page_count};

{foreach from=$filter item=item key=key}
listTable.filter.{$key} = '{$item}';
{/foreach}
{literal}

function searchOrder()
{
	
        listTable.filter['page']  = 1;
        listTable.loadList();
}
</script>
{/if}
</html>
